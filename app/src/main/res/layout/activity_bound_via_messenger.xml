<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stasbar.concurrency.bounded.messenger.BoundViaMessengerActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="UI is Running"
        android:textSize="42sp" />

    <Button
        android:id="@+id/btnBlockUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freeze Main Thread from service" />

    <Button
        android:id="@+id/btnPlaySound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Sound" />
</LinearLayout>
